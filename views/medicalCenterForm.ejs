<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Add Medical Center</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      margin: 0;
      padding: 20px;
      background-color: #f5f5f5;
    }
    .form-container {
      max-width: 600px;
      margin: 0 auto;
      background: #fff;
      padding: 20px;
      border-radius: 8px;
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }
    .form-group {
      margin-bottom: 15px;
    }
    label {
      font-weight: bold;
      display: block;
      margin-bottom: 5px;
    }
    input[type="text"],
    input[type="number"],
    input[type="email"],
    select,
    button {
      width: 100%;
      padding: 10px;
      margin-top: 5px;
      border: 1px solid #ccc;
      border-radius: 4px;
      font-size: 14px;
    }
    button {
      background-color: #007BFF;
      color: #fff;
      font-weight: bold;
      cursor: pointer;
    }
    button:hover {
      background-color: #0056b3;
    }
  </style>
</head>
<body>

<div class="form-container">
  <h1>Add Medical Center</h1>
  <form action="/add-medical-center" method="POST">
    <!-- City Name -->
    <div class="form-group">
      <label for="city">City Name</label>
      <select id="city" name="city" required>
        <option value="" disabled selected>Select a city</option>
        <option value="Mumbai">Mumbai</option>
        <option value="Delhi">Delhi</option>
        <option value="Bangalore">Bangalore</option>
        <option value="Kolkata">Kolkata</option>
        <option value="Chennai">Chennai</option>
        <option value="Hyderabad">Hyderabad</option>
        <option value="Pune">Pune</option>
        <option value="Ahmedabad">Ahmedabad</option>
        <option value="Jaipur">Jaipur</option>
        <option value="Chandigarh">Chandigarh</option>
        <option value="Surat">Surat</option>
        <option value="Lucknow">Lucknow</option>
        <option value="Kanpur">Kanpur</option>
        <option value="Nagpur">Nagpur</option>
        <option value="Indore">Indore</option>
        <option value="Coimbatore">Coimbatore</option>
        <option value="Vadodara">Vadodara</option>
        <option value="Visakhapatnam">Visakhapatnam</option>
        <option value="Patna">Patna</option>
        <option value="Bhopal">Bhopal</option>
      </select>
    </div>

    <!-- Medical Center Name -->
    <div class="form-group">
      <label for="name">Medical Center Name</label>
      <input type="text" id="name" name="medicalCenter[name]" placeholder="Enter medical center name" required>
    </div>

    <!-- Address Fields -->
    <h3>Address</h3>
    <div class="form-group">
      <label for="street">Street</label>
      <input type="text" id="street" name="medicalCenter[address][street]" placeholder="Enter street name" required>
    </div>
    <div class="form-group">
      <label for="state">State</label>
      <input type="text" id="state" name="medicalCenter[address][state]" placeholder="Enter state" required>
    </div>
    <div class="form-group">
      <label for="zipcode">Zipcode</label>
      <input type="text" id="zipcode" name="medicalCenter[address][zipcode]" placeholder="Enter zipcode" required>
    </div>

    <!-- Contact Information -->
    <h3>Contact</h3>
    <div class="form-group">
      <label for="phone">Phone</label>
      <input type="text" id="phone" name="medicalCenter[contact][phone]" placeholder="Enter 10-digit phone number" pattern="^\d{10}$" required>
    </div>
    <div class="form-group">
      <label for="email">Email</label>
      <input type="email" id="email" name="medicalCenter[contact][email]" placeholder="Enter email address" required>
    </div>

    <!-- Bed Availability -->
    <div class="form-group">
      <label for="bedAvailability">Bed Availability</label>
      <input type="number" id="bedAvailability" name="medicalCenter[bedAvailability]" placeholder="Enter number of beds available" min="0" required>
    </div>

    <!-- Submit Button -->
    <button type="submit">Add Medical Center</button>
  </form>
</div>

</body>
</html>
